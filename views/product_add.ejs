<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Add Product</title>

  <!-- Bootstrap core CSS -->
  <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link rel="stylesheet" src="shop-homepage.css">
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

</head>

<body>

  <!-- Navigation -->
  <%- include('partials/header') %>

  <!-- Page Content -->
  <div class="container">

    <div class="body add-form">

        <div class="col-lg-12">

        <div class="row">
          <form action="/api/addproduct/" method="POST" class="new-form">
            <div class="form-group row">
              <label for="merch-id-label">Merch Type:</label>
              <select class="form-control merch-type" name="merch-id">
              </select>
            </div>
            <div class="form-group row">
              <label for="merch-name-label">Name:</label>
              <input type="text" class="form-control" name="merch-name-id" placeholder="text">
            </div>
            <div class="form-group row">
              <label for="merch-description-label">Description:</label>
              <input type="text" class="form-control" name="merch-description-id" placeholder="text">
            </div>
            <div class="form-group row">
              <label for="merch-cost-label">Cost:</label>
              <div class="input-group">
                <input name="cost" type="number" value="0" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" id="c2" />
              </div>
            </div>
            <div class="form-group row">
              <label for="merch-cost-label">Merch Sizes</label>
              <select class="form-control" name="merch-size">
                <option>XS</option>
                <option>S</option>
                <option>M</option>
                <option>L</option>
                <option>XL</option>
                <option>2XL</option>
                <option>3XL</option>
              </select>
            </div>
            <div class="form-group row">
              <label for="merch-thumbnail-url-label">Thumbnail Image:</label>
              <input type="text" class="form-control" name="merch-thumbnail-url-id" placeholder="text">
            </div>
            <div class="form-group row">
              <label for="merch-thumbnail-url-label">Cover Photo Image:</label>
              <input type="text" class="form-control" name="merch-cover-photo-url-id" placeholder="text">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Bootstrap core JavaScript -->
  <script src="../vendor/jquery/jquery.min.js"></script>
  <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../scripts/add_product.js"></script>

</body>

</html>
